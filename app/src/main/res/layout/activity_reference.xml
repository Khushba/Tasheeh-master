<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".reference"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/color">
    
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/display_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="Enter Surah"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_go3"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:entries="@array/spinner_go"
        android:textSize="25dp"

        >

    </Spinner>
    <TextView
        android:id="@+id/display_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text="Enter Ayah Number"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/ayahNumber3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_gravity="center"
        />
    <Button

        android:id="@+id/buttonRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="18dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:theme="@style/myButtonTheme"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textRef"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />

</LinearLayout>
</ScrollView>